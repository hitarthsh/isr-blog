{
  "name": "creativitycoder",
  "version": "1.0.0",
  "description": "Corporate-ready CreativityCoder Platform with WordPress and Ghost integration",
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "cross-env SKIP_GRAPHQL_CODEGEN=true next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "setup": "node scripts/setup-env.js",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out dist",
    "precommit": "npm run lint && npm run type-check && npm run test:ci",
    "prepare": "husky install",
    "health": "curl -f http://localhost:3000/api/health || exit 1"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tryghost/content-api": "^1.12.0",
    "@wordpress/api-fetch": "^7.33.0",
    "critters": "^0.0.23",
    "date-fns": "^4.1.0",
    "next": "16.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/tryghost__content-api": "^1.3.17",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "nextjs",
    "isr",
    "blog",
    "wordpress",
    "ghost",
    "typescript",
    "tailwindcss",
    "corporate",
    "enterprise",
    "creativitycoder"
  ],
  "author": "CreativityCoder Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/creativitycoder.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/creativitycoder/issues"
  },
  "homepage": "https://github.com/your-org/creativitycoder#readme"
}
