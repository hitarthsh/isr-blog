# CreativityCoder Platform - Environment Configuration
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure random string for production
NEXTAUTH_SECRET=your-super-secret-key-here-minimum-32-characters
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# WORDPRESS CONFIGURATION
# =============================================================================
WORDPRESS_API_URL=https://your-wordpress-site.com/wp-json/wp/v2
WORDPRESS_USERNAME=your-username
WORDPRESS_PASSWORD=your-application-password

# =============================================================================
# GHOST CONFIGURATION
# =============================================================================
GHOST_API_URL=https://your-ghost-site.com
GHOST_CONTENT_API_KEY=your-ghost-content-api-key

# =============================================================================
# CreativityCoder CONFIGURATION
# =============================================================================
# Revalidation time in seconds (default: 3600 = 1 hour)
ISR_REVALIDATE_TIME=3600

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Optional: Add your analytics tracking IDs
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# =============================================================================
# RATE LIMITING
# =============================================================================
# API rate limiting (requests per minute)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# LOGGING
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
ENABLE_ANALYTICS=false
ENABLE_ERROR_REPORTING=false
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
